<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationCode"
    android:background="#f7df6d">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="120dp"
        android:src="@drawable/logo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verificationCode"
        android:hint="Code"
        android:textColorHint="#2E5D6E"
        android:textColor="#2E5D6E"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="#30ffffff"
        android:layout_below="@id/verificationMessage"/>

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/verificationCode"
        android:backgroundTint="#f1d54e"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Verify"
        android:textColor="#2e5d6e"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verificationMessage"
        android:layout_below="@id/logo"
        android:text="Please check your email address for verification code!"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>
</RelativeLayout>